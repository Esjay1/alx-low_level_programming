CC := gcc
SRC = $(wildcard *.c) 
OBJ = $(SRC:.c=.o)
NAME = school
RM = delete

.PHONY = all clean oclean fclean re $(RM)

all : $(NAME)

school : $(OBJ) 
	$(CC) $(OBJ) -o $@

%.o : %.c
	$(CC) -c $< -o $@
clean : 
	rm -vf .*.sw[a-z] school
oclean :
	rm -vf *.o
fclean :
	rm -vf .*.sw[a-z] school *.o
re :
	rm -f *.o
$(RM) :
	rm -vf *.c *.o
	
