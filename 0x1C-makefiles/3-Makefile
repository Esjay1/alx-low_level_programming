CC = gcc
SRC = main.c school.c 
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

.PHONY : all school clean oclean fclean re

all : $(NAME)

school : $(OBJ)
	$(CC) $(OBJ) -o $@

%.o : %.c
	$(CC) -c $< -o $@
clean :
	$(RM) *~ .[a-zA-Z0-9]* school

oclean : 
	$(RM) $(OBJ)

fclean : clean oclean
	
re : oclean all

